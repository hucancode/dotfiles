<!DOCTYPE menu [
  <!ENTITY icons "/usr/share/openbox/icons">
  <!ENTITY pipes "~/.config/openbox/bin">
]>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/  file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" title="Menu" label="Openbox 3">
		<item icon="&icons;/terminal.png" label="Terminal Emulator">
			<action name="Execute">
				<command>kitty</command>
			</action>
		</item>
		<separator/>
		<item icon="&icons;/filemanager.png" label="File Manager">
			<action name="Execute">
				<command>thunar</command>
			</action>
		</item>
		<separator/>
		<item icon="&icons;/browser.png" label="Web Browser">
			<action name="Execute">
				<command>chromium</command>
			</action>
		</item>
		<separator/>
		<item icon="&icons;/editor.png" label="Code Editor">
			<action name="Execute">
				<command>code</command>
			</action>
		</item>
		<separator/>
		<menu icon="&icons;/shots.png" id="ac-shots" execute="&pipes;/ac-shots" label="Screenshot"/>
		<separator/>
		<menu icon="&icons;/record.png" id="ac-record" execute="&pipes;/ac-record" label="Screen Recorder"/>
		<separator/>
		<menu icon="&icons;/settings.png" id="preferences" label="Preferences">
			<menu id="obconfig" label="Openbox">
				<item label="Settings">
					<action name="Execute">
						<command>obconf</command>
					</action>
				</item>
				<separator/>
				<item label="Edit menu.xml">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/menu-icons.xml</command>
					</action>
				</item>
				<item label="Edit rc.xml">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/rc.xml</command>
					</action>
				</item>
				<item label="Edit autostart">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/autostart</command>
					</action>
				</item>
				<separator/>
				<item label="Reconfigure">
					<action name="Reconfigure"/>
				</item>
				<item label="Restart">
					<action name="Restart"/>
				</item>
			</menu>
			<separator/>
			<item label="Change Wallpaper">
				<action name="Execute">
					<command>nitrogen</command>
				</action>
			</item>
			<item label="Appearance Settings (XFCE)">
				<action name="Execute">
					<command>xfce4-appearance-settings</command>
				</action>
			</item>
			<item label="Appearance Settings (GTK)">
				<action name="Execute">
					<command>lxappearance</command>
				</action>
			</item>
		</menu>
		<separator/>
		<menu icon="&icons;/keyboard.png" id="KeybindsPipeMenu" execute="&pipes;/ac-kb-pipemenu" label="Keybinds"/>
		<separator/>
		<item icon="&icons;/sys-lock.png" label="Lock Screen">
			<action name="Execute">
				<command>~/.local/bin/lockscreen</command>
			</action>
		</item>
		<separator/>
		<menu icon="&icons;/sys-poweroff.png" id="Exit" label="System">
			<item icon="&icons;/sys-exit.png" label="Logout">
				<action name="Execute">
					<command>~/.config/openbox/bin/ac-powermenu --logout</command>
				</action>
			</item>
			<separator/>
			<item icon="&icons;/sys-sleep.png" label="Suspend">
				<action name="Execute">
					<command>~/.config/openbox/bin/ac-powermenu --suspent</command>
				</action>
			</item>
			<separator/>
			<item icon="&icons;/sys-reboot.png" label="Reboot">
				<action name="Execute">
					<command>~/.config/openbox/bin/ac-powermenu --reboot</command>
				</action>
			</item>
			<separator/>
			<item icon="&icons;/sys-poweroff-alt.png" label="Shutdown">
				<action name="Execute">
					<command>~/.config/openbox/bin/ac-powermenu --shutdown</command>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
